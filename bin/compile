#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -eo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

indent() { sed -u 's/^/       /'; }
header() { echo "-----> $*"; }
log()    { echo "       $*"; }

inspect_dir() {
  local dir_to_inspect="$1"

  header "Inspecting directory: $dir_to_inspect"
  if [ -d "$dir_to_inspect" ]; then
    log "$dir_to_inspect exists"
    du -ah --max-depth=1 "$dir_to_inspect" | indent
  else
    log "$dir_to_inspect does not exist"
  fi
}

# Skip frontend buildpack for review apps except zeneducate-pr-224
if [ "$SERVER_NAME" = "review" ] && [ "$HEROKU_APP_NAME" != "zeneducate-pr-224" ]; then
  header "Skipping frontend build for review app: $HEROKU_APP_NAME"
  exit 0
fi

# Function to write env vars to a temporary file for sourcing
write_env_file() {
  local env_file="$1"
  if [ -d "$ENV_DIR" ]; then
    for e in $(ls $ENV_DIR); do
      if [[ $e == WEB_* ]]; then
        # Remove WEB_ prefix
        local var_name=${e#WEB_}
        # Read the value preserving all special characters
        local value=$(cat "$ENV_DIR/$e")
        # Write export statement to file, properly escaping the value
        printf "export %s=%q\n" "$var_name" "$value" >> "$env_file"
        # Print debug info
        log "Setting $var_name for build"
      fi
    done
  fi
}

header "Frontend Buildpack: Starting build process"

cd $BUILD_DIR

# Check if web directory exists
if [ ! -d "web" ]; then
  header "ERROR: No web directory found, skipping frontend build"
  exit 0
fi

cd web

# Check if sha-files script exists
if [ ! -f "./bin/sha-files" ]; then
  header "ERROR: ./web/bin/sha-files script not found"
  exit 1
fi

# XXX: Temp logging
inspect_dir "$CACHE_DIR"

# Calculate checksum using the existing script
header "Calculating web directory checksum"
WEB_CHECKSUM=$(bash ./bin/sha-files | tail -n 1)
log "Current checksum: $WEB_CHECKSUM"

# Check if this build already exists in cache
CACHED_BUILD_DIR="$CACHE_DIR/web-builds/$WEB_CHECKSUM"

# XXX: Temp logging
inspect_dir "$CACHE_DIR/web-builds"

if [ -d "$CACHED_BUILD_DIR" ] && [ -d "$CACHED_BUILD_DIR/dist" ]; then
  header "Build found in cache, using cached version"
  log "Cached build exists, skipping rebuild"
  # Copy dist back into web/
  cp -r "$CACHED_BUILD_DIR/dist" "$BUILD_DIR/web/"
  header "Frontend build complete (from cache)"
  exit 0
fi

header "No cached build found, proceeding with fresh build"

# Ensure Node.js is available (assuming another buildpack provides it)
if ! command -v node &> /dev/null; then
  header "ERROR: Node.js not found. Ensure Node.js buildpack runs before this one."
  exit 1
fi

# Cache npm dependencies by package-lock.json checksum
header "Checking for cached node_modules"
NPM_CACHE_CHECKSUM=$(sha256sum package-lock.json | awk '{print $1}')
log "Node modules checksum: $NPM_CACHE_CHECKSUM"

# XXX: Temp logging
inspect_dir "$CACHE_DIR/npm-cache"

NPM_CACHE_DIR="$CACHE_DIR/npm-cache/$NPM_CACHE_CHECKSUM"

if [ -d "$NPM_CACHE_DIR/node_modules" ]; then
  log "Restoring cached node_modules"
  cp -R "$NPM_CACHE_DIR/node_modules" ./node_modules
else
  log "No cache found, installing dependencies"
  npm ci --production=false 2>&1 | indent
  log "Caching node_modules"
  mkdir -p "$NPM_CACHE_DIR"
  cp -R ./node_modules "$NPM_CACHE_DIR/"
fi

# XXX: Temp logging
inspect_dir "$CACHE_DIR/npm-cache"

# Prepare WEB_ environment variables for build
header "Preparing WEB_ environment variables for build"

# Create a temporary file for environment variables
ENV_FILE=$(mktemp)
trap "rm -f $ENV_FILE" EXIT

# Write all WEB_ variables to the temp file
write_env_file "$ENV_FILE"

# Increase Node.js memory limit for the build
echo "export NODE_OPTIONS='--max-old-space-size=4096'" >> "$ENV_FILE"
log "Setting NODE_OPTIONS=--max-old-space-size=4096"

# Build the frontend in a subshell with the isolated environment
header "Building frontend application"
(
  source "$ENV_FILE"
  npm run build 2>&1 | indent
)

# Cache the build
header "Caching build for future deployments"
mkdir -p "$CACHED_BUILD_DIR"
cp -r dist "$CACHED_BUILD_DIR/"

# XXX: Temp logging
inspect_dir "$CACHE_DIR/web-builds"

# XXX: Temp logging
inspect_dir "$CACHE_DIR"

# Clean up most of web to keep the slug small
header "Keeping slug small"
for item in *; do
  case "$item" in
    dist|bin|public)
      # keep these
      ;;
    *)
      rm -rf "$item"
      ;;
  esac
done

header "Frontend build complete"
